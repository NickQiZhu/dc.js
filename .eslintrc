{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "globals": {
    "console": false,
    "crossfilter": false,
    "d3": false,
    "dc": false,
    "global": false,
    "module": false,
    "process": false,
    "require": false,
    "jasmine": false,
    "expect": false,
    "describe": false,
    "it": false,
    "beforeEach": false,
    "afterEach": false,
    "spyOn": false
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-useless-escape": "off",
    "no-console": "off",
    "camelcase": 2,
    "curly": 2,
    "eqeqeq": 2,
    "no-extend-native": 2,
    "wrap-iife": [
      2,
      "any"
    ],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1,
        "MemberExpression": "off",
        "CallExpression": {"arguments": "first"},
        "ArrayExpression": "first",
        "flatTernaryExpressions": true
      }
    ],
    "no-caller": 2,
    "no-new": 2,
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "max-params": [
      2,
      5
    ],
    "max-depth": [
      2,
      4
    ],
    "complexity": [
      2,
      10
    ],
    "max-len": [
      2,
      140
    ],
    "quotes": [
      2,
      "single"
    ],
    "no-var": "error",
    "prefer-const": "error",
    "no-shadow": "error",
    "prefer-arrow-callback": "error",
    "arrow-body-style": "error",
    "implicit-arrow-linebreak": "error",
    "arrow-parens": ["error", "as-needed"],
    "space-before-function-paren": [
      2,
      "always"
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireParamDescription": false,
        "requireReturnDescription": false
      }
    ]
  }
}
